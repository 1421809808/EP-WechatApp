<navBar title="修改个人资料" background='#4facfe' back="{{true}}" iconTheme='white' color='#fff' bindback="handlerGobackClick"/>
<form bindsubmit="formSubmit">
  <view class="u-p-30 u-m-t-30 bg-f">
    <view class="i-flex i-aic u-border-bottom u-p-b-30">
      <view class="label">真实姓名</view>
      <view class="i-flex-item u-m-l-30">
        <input class="ipt" type="text" name="realname" value="{{realname}}" placeholder="请输入真实姓名" maxlength="10" placeholder-class="ipt-hold" />
      </view>
    </view>
    <view class="i-flex i-aic u-p-t-30">
      <view class="label">手机号码</view>
      <view class="i-flex-item u-m-l-30">
        <input class="ipt" type="text" name="telephone" value="{{telephone}}" placeholder="请输入手机号码" maxlength="11" placeholder-class="ipt-hold" />
      </view>
    </view>
  </view>

  <view class="edit-btn u-m-t-40">
    <button loading="{{btnLoading}}" form-type="submit">保存更改</button>
  </view>
</form>